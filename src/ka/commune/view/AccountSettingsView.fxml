<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ka.commune.view.AccountSettingsController">
   <content>
      <HBox alignment="CENTER">
         <children>
            <Pane prefHeight="400.0" prefWidth="100.0" HBox.hgrow="ALWAYS" />
            <VBox alignment="CENTER" prefHeight="400.0" prefWidth="420.0">
               <children>
                  <HBox alignment="CENTER_RIGHT" prefHeight="70.0" prefWidth="200.0" spacing="40.0">
                     <children>
                        <JFXCheckBox fx:id="checkUser" alignment="BOTTOM_LEFT" contentDisplay="TOP" nodeOrientation="RIGHT_TO_LEFT" prefHeight="30.0" prefWidth="151.0" text="تغيير اسم المستخدم" />
                        <JFXTextField fx:id="textUser" alignment="CENTER_RIGHT" editable="false" focusColor="#10ac84" labelFloat="true" prefHeight="30.0" prefWidth="200.0" promptText="اسم المستخدم">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </JFXTextField>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets right="20.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" prefHeight="70.0" prefWidth="200.0" spacing="40.0">
                     <padding>
                        <Insets right="20.0" />
                     </padding>
                     <children>
                        <JFXTextField fx:id="textOldPassword" alignment="CENTER_RIGHT" focusColor="#10ac84" labelFloat="true" prefHeight="30.0" prefWidth="200.0" promptText="كلمة المرور الحالية">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </JFXTextField>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" prefHeight="70.0" prefWidth="200.0" spacing="40.0">
                     <padding>
                        <Insets right="20.0" />
                     </padding>
                     <children>
                        <JFXTextField fx:id="textNewPassword" alignment="CENTER_RIGHT" focusColor="#10ac84" labelFloat="true" prefHeight="30.0" prefWidth="200.0" promptText="كلمة المرور الجديدة">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </JFXTextField>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#updateAccount" prefHeight="44.0" prefWidth="135.0" style="-fx-background-color: #10ac84;" text="تغيير" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="17.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <Pane prefHeight="400.0" prefWidth="100.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </content>
</ScrollPane>
